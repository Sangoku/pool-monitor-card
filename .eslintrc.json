{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "LitElement": "readonly"
  },
  "ignorePatterns": ["test-results/**/*", "dist/**/*", "tests/**/*"],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "quotes": "off",
    "semi": "off",
    "indent": "off",
    "comma-dangle": "off",
    "no-undef": "error"
  }
}
