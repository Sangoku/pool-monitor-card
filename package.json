{
  "name": "pool-monitor-card",
  "version": "2.1.0",
  "description": "Pool Monitor Card for Home Assistant",
  "main": "dist/pool-monitor-card.js",
  "type": "module",
  "scripts": {
    "build": "npm run lint && rollup -c && npm run sync",
    "prepare": "npm run build && npm run visual-test",
    "dev": "rollup -c --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "test": "jest --passWithNoTests",
    "screenshot": "node scripts/take-screenshots.js",
    "visual-test": "node scripts/visual-test.js",
    "sync": "powershell.exe -ExecutionPolicy Bypass -File ./scripts/sync-views.ps1"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.40.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.1.1",
    "rollup": "^2.79.1"
  }
}
